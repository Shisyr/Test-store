<h1><%= @user.name %></h1>
<h2><%= @user.last_name %></h2>
<h3><%= @user.email %></h3>
<h4><%= @user.age %></h4>
<h4><%= @user.gender %></h4>
<h4><%= @user.phone_number %></h4>
<%= link_to 'Изменить', edit_user_path(@user) %>
